/**
 * Helper function to get the layout status
 */
function _panopoly_admin_general_layout_get_status($layout_name, $status) {
  if ($status == 'enable') {
    $link = array(
      '#type' => 'link',
      '#title' => t('Disable?'),
      '#href' => 'admin/panopoly/libraries/panes/layout/disable/' . $layout_name . '/' . drupal_get_token($layout_name),
      '#ajax' => array(
        'wrapper' => 'panopoly-admin-layout-response-' . $layout_name,
        'method' => 'replace',
        'effect' => 'fade',
      ),
    );
    return '<div id="panopoly-admin-layout-response-' . $layout_name . '">Enabled (' . drupal_render($link) . ')</div>';
  }
  else {
    $link = array(
      '#type' => 'link',
      '#title' => t('Enable?'),
      '#href' => 'admin/panopoly/libraries/panes/layout/enable/' . $layout_name . '/' . drupal_get_token($layout_name),
      '#ajax' => array(
        'wrapper' => 'panopoly-admin-layout-response-' . $layout_name,
        'method' => 'replace',
        'effect' => 'fade',
      ),
    );
    return '<div id="panopoly-admin-layout-response-' . $layout_name . '">Disabled (' . drupal_render($link) . ')</div>';
  }
}


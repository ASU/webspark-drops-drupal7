/**
 * Implements hook_preprocess_html().
 */
function webspark_wysiwyg_preprocess_html(&$variables) {
  drupal_add_css(drupal_get_path('module', 'webspark_wysiwyg') . '/css/webspark-wysiwyg.css',
    array('group' => CSS_THEME, 'every_page' => TRUE));
}


 **/
function mega_footer_WS2L_block_info() {
  $blocks['mega_footer_WS2L'] = array(
    'info' => t('Mega Footer WS2L'),
    'region' => 'footer',
    'weight' => -10,
    'cache' => DRUPAL_CACHE_GLOBAL,
    'status' => 1,
  );
  return $blocks;

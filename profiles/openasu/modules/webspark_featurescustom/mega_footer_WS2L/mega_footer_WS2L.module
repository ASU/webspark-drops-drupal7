/**
 *Implements hook_block_save
 *
 **/
function mega_footer_WS2L_block_save($delta = '', $edit = array()) {

  if ($delta == 'mega_footer_WS2L') {

    if ($edit['mega_footer_WS2L_unit_logo'] != '') {
      $block = block_load('mega_footer_WS2L', 'mega_footer_WS2L');
      $file = file_load($edit['mega_footer_WS2L_unit_logo']);
      $file->status = FILE_STATUS_PERMANENT;
      file_save($file);
      file_usage_add($file, 'mega_footer_WS2L', 'block', $block->bid);
    }
    if ($edit['mega_footer_WS2L_unit_custom_social_media_1_logo'] != '') {
      $block = block_load('mega_footer_WS2L', 'mega_footer_WS2L');
      $file = file_load($edit['mega_footer_WS2L_unit_custom_social_media_1_logo']);
      $file->status = FILE_STATUS_PERMANENT;
      file_save($file);
      file_usage_add($file, 'mega_footer_WS2L', 'block', $block->bid);
    }
    if ($edit['mega_footer_WS2L_unit_custom_social_media_2_logo'] != '') {
      $block = block_load('mega_footer_WS2L', 'mega_footer_WS2L');
      $file = file_load($edit['mega_footer_WS2L_unit_custom_social_media_2_logo']);
      $file->status = FILE_STATUS_PERMANENT;
      file_save($file);
      file_usage_add($file, 'mega_footer_WS2L', 'block', $block->bid);
    }
    if ($edit['mega_footer_WS2L_unit_custom_social_media_3_logo'] != '') {
      $block = block_load('mega_footer_WS2L', 'mega_footer_WS2L');
      $file = file_load($edit['mega_footer_WS2L_unit_custom_social_media_3_logo']);
      $file->status = FILE_STATUS_PERMANENT;
      file_save($file);
      file_usage_add($file, 'mega_footer_WS2L', 'block', $block->bid);
    }

    variable_set('mega_footer_WS2L_unit_title', $edit['mega_footer_WS2L_unit_title']);
//    variable_set('mega_footer_WS2L_unit_descrip', $edit['mega_footer_WS2L_unit_description']);
    variable_set('mega_footer_WS2L_unit_contact_us_link', $edit['mega_footer_WS2L_unit_contact_us_link']);
    // Social media
    variable_set('mega_footer_WS2L_unit_facebook_link', $edit['mega_footer_WS2L_unit_facebook_link']);
    variable_set('mega_footer_WS2L_unit_twitter_link', $edit['mega_footer_WS2L_unit_twitter_link']);
    variable_set('mega_footer_WS2L_unit_linkedin_link', $edit['mega_footer_WS2L_unit_linkedin_link']);
    variable_set('mega_footer_WS2L_unit_youtube_link', $edit['mega_footer_WS2L_unit_youtube_link']);
    variable_set('mega_footer_WS2L_unit_instagram_link', $edit['mega_footer_WS2L_unit_instagram_link']);
    variable_set('mega_footer_WS2L_unit_vimeo_link', $edit['mega_footer_WS2L_unit_vimeo_link']);

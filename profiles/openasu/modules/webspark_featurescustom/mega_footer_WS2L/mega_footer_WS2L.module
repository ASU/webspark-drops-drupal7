/**
 * Implements hook_block_view().
 **/
function mega_footer_WS2L_block_view($delta = '') {

  // Build custom mega footer.
  $block = array();

  if ($delta == 'mega_footer_WS2L') {
    $mega_menu = menu_tree_all_data('menu-mega-footer-menu');
    
    $mega_menu = menu_tree_output($mega_menu);

    // INIT Column Width depending on number of columns
	if (count(menu_navigation_links('menu-mega-footer-menu', $level = 0)) >= 4) {
		$bootstrap_col_width = 2;
	} else {
    	$bootstrap_col_width = 3;
	}
    
    //social media icon variables
    $mfsm_facebook  = _mega_footer_WS2L_social_media('facebook', 'facebook-square', 'Facebook', '', '');
    $mfsm_twitter   = _mega_footer_WS2L_social_media('twitter', 'twitter-square', 'Twitter', '', '');
    $mfsm_linkedin  = _mega_footer_WS2L_social_media('linkedin', 'linkedin-square', 'LinkedIn', '', '');
    $mfsm_youtube   = _mega_footer_WS2L_social_media('youtube', 'youtube-square', 'YouTube', '', '');
    $mfsm_instagram = _mega_footer_WS2L_social_media('instagram', 'instagram-square', 'Instagram', '', '');
    $mfsm_vimeo     = _mega_footer_WS2L_social_media('vimeo', 'vimeo-square', 'Vimeo', '', '');
    $mfsm_flickr    = _mega_footer_WS2L_social_media('flickr', 'flickr', 'Flickr', '', '');
    $mfsm_pinterest = _mega_footer_WS2L_social_media('pinterest', 'pinterest-square', 'Pinterest', '', '');
    $mfsm_tumblr    = _mega_footer_WS2L_social_media('tumblr', 'tumblr-square', 'Tumblr', '', '');
    $mfsm_rss       = _mega_footer_WS2L_social_media('rss', 'rss-square', 'RSS', '', '');
    $mfsm_custom1   = _mega_footer_WS2L_custom_icon_and_link('social_media', '1', '', '');
    $mfsm_custom2   = _mega_footer_WS2L_custom_icon_and_link('social_media', '2', '', '');
    $mfsm_custom3   = _mega_footer_WS2L_custom_icon_and_link('social_media', '3', '', '');
    
    //Create the social media icons array
    $sm_icons = array($mfsm_facebook, $mfsm_twitter, $mfsm_linkedin, $mfsm_youtube, $mfsm_instagram, $mfsm_vimeo, $mfsm_flickr, $mfsm_pinterest, $mfsm_tumblr,$mfsm_rss,$mfsm_custom1,$mfsm_custom2,$mfsm_custom3);
      
      
	$footer_mark = "";
    $footer_mark .= "<div class='megafoot'>";

	if ((variable_get('mega_footer_WS2L_unit_logo', '') != 0) || (!empty(array_filter($sm_icons)))) {
	$footer_mark .= "<div class='row megafoot-logo-social'>";


	//$bootstrap_col_width = menu_tree_all_data('menu-mega-footer-menu');


      // Include default LH column
      //$bootstrap_col_width = 2;
      $footer_mark .= "<div class='col-md- col-sm- space-bot-md '>";

      // Logo
      $logo = variable_get('mega_footer_WS2L_unit_logo', '');
      $check = variable_get('mega_footer_WS2L_logo_alt', NULL);
      $alt = (!empty($check)) ? check_plain($check) : "";
      if ($logo != '' && $logo != NULL) {
        $file = file_load($logo);
        $file_url = file_create_url($file->uri);
        if (!empty($file_url)) {
          $logo_link = variable_get('mega_footer_WS2L_logo_link', '');
          $logo_link_prefix = ($logo_link !== '') ? '<a href="' . $logo_link . '">' : '';
          $logo_link_suffix = ($logo_link !== '') ? '</a>' : '';
          $footer_mark .= '<div id="mega-footer-logo-wrapper" class="col-md-5 col-sm-12">' . $logo_link_prefix
            . "<img src='$file_url' alt='$alt' />"
            . $logo_link_suffix . "</div>";
        }
      }

      // Social Media icons - Open in new window/tab? setting check
      $external = (theme_get_setting('social_media_exit') == 1) ? 'target="_new" ' : '';
	  $footer_mark .= "<div id='mega-footer-social-media' class='col-md-7 col-sm-12'>";
	  $footer_mark .="<nav role='navigation' aria-label='Social media'>";
      $footer_mark .= "<ul class='dgtl-mkting-101'>";
      $footer_mark = _mega_footer_WS2L_social_media('facebook', 'facebook-square', 'Facebook', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('twitter', 'twitter-square', 'Twitter', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('linkedin', 'linkedin', 'LinkedIn', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('youtube', 'youtube-square', 'YouTube', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('instagram', 'instagram-square', 'Instagram', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('vimeo', 'vimeo-square', 'Vimeo', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('flickr', 'flickr', 'Flickr', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('pinterest', 'pinterest-square', 'Pinterest', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('tumblr', 'tumblr-square', 'Tumblr', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_social_media('rss', 'rss-square', 'RSS', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_custom_icon_and_link('social_media', '1', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_custom_icon_and_link('social_media', '2', $footer_mark, $external);
      $footer_mark = _mega_footer_WS2L_custom_icon_and_link('social_media', '3', $footer_mark, $external);
      $footer_mark .= "</ul>";
	  $footer_mark .= "</nav>";
	  $footer_mark .= "</div>";
      $footer_mark .= "</div>";
	  $footer_mark .= "</div>";//end row
    }
      $footer_columns = (count(menu_navigation_links('menu-mega-footer-menu', $level = 0)));
                
      if ((variable_get('mega_footer_WS2L_unit_title', 'Arizona State University') != 0) || (variable_get('mega_footer_WS2L_unit_contact_us_link', NULL) != 0) || (variable_get('mega_footer_WS2L_contribute_link', NULL)) || ($footer_columns != 0) ) {
          
	  $footer_mark .= '<div class="row mega-footer-menu-links">';//begin row
      $footer_mark .= '<nav role="navigation" aria-label="Footer">';
      
	  // Must make into variable column width
	  //$footer_mark .= "<div class='col-md-2 col-sm-12 space-bot-md megafoot-border'>";
	  $footer_mark .= "<div class='col-md-".$bootstrap_col_width." col-sm-12 space-bot-md megafoot-border'>";
	  
      // Title & Description
      $footer_mark .= "<div class='mega-dept-title'>" .
        variable_get('mega_footer_WS2L_unit_title', 'Arizona State University') . "</div>";

//      $check = variable_get('mega_footer_WS2L_unit_descrip', NULL);
//      $footer_mark .= (!empty($check)) ? "<div class='megafoot-description'>" . $check . "</div>" : "";

      // Show contact info?
//      if (variable_get('mega_footer_WS2L_show_contact_info', FALSE) == TRUE) {
//        $footer_mark .= "<address>";
//        $check = variable_get('mega_footer_WS2L_unit_address_one', NULL);
//        $footer_mark .= (!empty($check)) ? $check . "<br />" : "";
//        $is_line_two = variable_get('mega_footer_WS2L_unit_address_two', NULL);
//        $footer_mark .= (!empty($is_line_two)) ? $is_line_two . "<br />" : "";
//        $check = variable_get('mega_footer_WS2L_unit_address_three', NULL);
//        $footer_mark .= (!empty($check)) ? $check . "<br />" : "";
//        $check = variable_get('mega_footer_WS2L_unit_phone', NULL);
//        $footer_mark .= (!empty($check)) ? "Phone: <a class='phone-link' href='tel:" .
//            $check . "'>" . $check . "</a><br />" : "";
//        $is_fax = variable_get('mega_footer_WS2L_unit_fax', '');
//        $footer_mark .= (!empty($is_fax)) ? "Fax: <a class='phone-link' href='tel:" .
//            $is_fax . "'>" . $is_fax . "</a><br />" : "";
//        $footer_mark .= "</address>";
//      }

      // Contact Us
      $check = variable_get('mega_footer_WS2L_unit_contact_us_link', NULL);
      $footer_mark .= (!empty($check)) ? "<p><a class='contact-link' href='" . 
          $check . "'>Contact us</a></p>": "";

      // Add Contribute button
      $contrib = variable_get('mega_footer_WS2L_contribute_button', 'Contribute');
      if (variable_get('mega_footer_WS2L_contribute_link', NULL) != NULL) {
        $footer_mark .= "<a class='btn btn-gold' id='contribute-button' href='" . variable_get('mega_footer_WS2L_contribute_link', NULL) . "'>$contrib</a>";
      }

      $footer_mark .= "</div>";
      }
    

    // INIT for RH columns (Links)
    ///////////////////

    $i = 0;
    foreach ($mega_menu as $item) {

      if (is_bool($item)) {
        break;
      }
      $caret = (!empty($item['#below'])) ? "caret" : "";
      $footer_mark .= "<div class='col-md-" . $bootstrap_col_width . " col-sm-".$bootstrap_col_width." space-bot-md'>
          <h2 data-toggle='collapse' data-target='#mega_accord" . $i . "' class='big-foot-head collapsed'>" .
        //$item['#title'] . "<span class='$caret'></span></h2>
		$item['#title'] . "<span class='fas fa-chevron-up icon-rotates'></span></h2>
          <ul class='big-foot-nav  collapse in' id='mega_accord" . $i . "' style=''>";

      foreach ($item['#below'] as $inner) {
        if (is_bool($inner)) {
          break;
        }
        $footer_mark .= "<li><a href='" . url($inner['#href']) . "'>" . $inner['#title'] . "</a></li>";
      }

      $footer_mark .= "</ul></div>";
      $i++;
    }
    $footer_mark .= "</div></nav></div>";

    $block['content'] = array(
      '#markup' => $footer_mark,
      '#attached' => array(
        'css' => array(
          drupal_get_path('module', 'mega_footer_WS2L') . '/css/megafoot_WS2L.css',
          drupal_get_path('module', 'mega_footer_WS2L') . '/css/megafoot2l_WS2L.css'
        ),
      )
    );

  }
  return $block;
}


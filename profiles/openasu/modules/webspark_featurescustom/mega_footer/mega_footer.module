/**
 * Implements hook_block_info().
 **/
function mega_footer_block_info() {
  $blocks['mega_footer'] = array(
    'info' => t('Mega Footer'),
    'region' => 'footer',
    'weight' => -10,
    'cache' => DRUPAL_CACHE_GLOBAL,

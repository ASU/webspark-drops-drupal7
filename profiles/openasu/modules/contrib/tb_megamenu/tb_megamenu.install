<?php

/**
 * Implementation of hook_schema().
 */
function tb_megamenu_schema() {
  $schema = array();

  $schema['tb_megamenus'] = array(
    'fields' => array(
      'menu_name' => array(
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE
      ),
      'block_config' => array(
        'type' => 'text',
        'not null' => FALSE
      ),
      'menu_config' => array(
        'type' => 'text',
        'not null' => FALSE
      ),
      'language' => array(
        'type' => 'varchar',
        'length' => '12',
        'not null' => TRUE,
        'default' => ''
      )
    ),
    'primary key' => array('menu_name', 'language')
  );

  return $schema;
}

/**
 * Add language field
 */
function tb_megamenu_update_7101(&$sandbox) {
  // remove existing primary key
  db_query("ALTER TABLE {tb_megamenus} DROP primary key");
  $field = array(
    'type' => 'varchar',
    'length' => 12,
    'not null' => TRUE,
    'default' => '',
  );
  $keys_new = array(
    'primary key' => array(
      'menu_name',
      'language',
    ),
  );
  db_add_field('tb_megamenus', 'language', $field, $keys_new);
  // set all existing menus to current language
  db_query("UPDATE {tb_megamenus} SET language = '" . $GLOBALS['language']->language . "'");
}

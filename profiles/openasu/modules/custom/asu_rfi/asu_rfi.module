/**
 * "Is the form in Test Mode" check and markup output
 * @param array $form
 * @return string $form_mode - if "test", then it's in test mode
 */
function _asu_rfi_form_test_mode_markup(&$form, $form_id) {
  $form_mode = variable_get('asu_rfi_form_mode');
  if (user_access('administrator asu rfi') && $form_mode !== "prod") {
    if ($form_id !== 'asu_rfi_current_form_data') { // Non-current student forms
      switch ($form_mode) {
        case 'test':
          $markup = '<div class="alert alert-warning"><b>NOTICE</b>:'
            . ' Submissions by this form to Salesforce are in <b>TEST MODE</b>.'
            . '<a href="/admin/config/content/asurfi">Toggle Test Mode</a>.</div>';
          break;
        case 'none':
          $markup = '<div class="alert alert-warning"><b>NOTICE</b>:'
            . ' Submissions by this form to Salesforce are disabled.'
            . '<a href="/admin/config/content/asurfi">Toggle Test Mode</a>.</div>';
          break;
        default:
          $markup = '<div class="alert alert-warning"><b>NOTICE</b>:'
            . ' Submissions by this form to Salesforce may not be enabled.'
            . '<a href="/admin/config/content/asurfi">Check your settings</a>.</div>';
          break;
        }
    } else { // Current student forms ONLY - never submit
      $markup = '<div class="alert alert-info"><b>FYI</b>: All <em>current student</em> RFI
         forms do not submit their data to Salesforce.</div>';
    }
    $form['form_stage'] = array(
      '#type' => 'item',
      '#markup' => $markup,
    );
  }
}


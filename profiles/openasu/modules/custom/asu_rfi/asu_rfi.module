  /** @noinspection PhpUnusedLocalVariableInspection */
  $desiredProg = array(
    'code' => $programs[$degreeMappings['field_academic_plan']][LANGUAGE_NONE]['0']['value'],
    'vid' => $programs['vid'],
    'title' => $programs['title'],

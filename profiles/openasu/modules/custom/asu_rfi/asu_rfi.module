  if ($form['#id'] == "asu-rfi-admin-settings") {
    if (!empty($form['general_settings']['developer_settings']['asu_rfi_google_analytics_key']['#default_value'])) {
      if (preg_match("/^[a-zA-Z0-9\-_]{6,10}$/", $form['general_settings']['developer_settings']['asu_rfi_google_analytics_key']['#default_value'])) {
        $form['general_settings']['developer_settings']['asu_rfi_google_analytics_key']['#disabled'] = TRUE;
      } else {
        $form['general_settings']['developer_settings']['asu_rfi_google_analytics_key']['#disabled'] = FALSE;
      }
    }
  }

  // If Test Mode is set to "test" or "none", hide all multipage and longform RFI forms (and a Views exposed form)
  // from all users except administrators
  $rfi_mode = variable_get('asu_rfi_form_mode');
  if ((($rfi_mode === "test") || empty($rfi_mode) || $rfi_mode === 'none') && ($form['#id'] == "asu-rfi-form-data"
      || $form['#id'] === "asu-rfi-long-form-data"
      || $form['#id'] === 'views-exposed-form-asu-rfi-submissions-report-page')) {
      return TRUE;
  }
}


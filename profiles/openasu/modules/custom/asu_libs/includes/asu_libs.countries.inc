/**
 * Convert countries between Peoplesoft and Salesforce values.
 *
 * @param string $dest - Which library to convert to. Options are 'sf' (Salesforce) and 'ps' (Peoplesoft). Default is 'sf' (Salesforce)
 * @param boolean $associative - Build non-associative array format ('country1', 'country2' ... 'countryN') if FALSE.
 *   Defaults to TRUE('country' => 'country', etc.)
 * @return array (Countries) - Countries array.
 */
function asu_libs_get_countries($dest = 'sf', $associative = TRUE) {
  $raw = _asu_libs_countries_key($dest);
  if ($associative === TRUE) {
    $countries = array();
    foreach ($raw as $key => $value) {
      $countries[$key] = $key;
    }
    return $countries;
  } else {
    return array_keys($raw);
  }
}


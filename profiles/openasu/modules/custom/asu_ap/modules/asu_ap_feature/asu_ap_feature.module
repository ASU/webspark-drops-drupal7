            $form['field_asu_ap_ex_car_tf']['#access'] = FALSE;
        }
    } elseif ($form['field_asu_ap_program']['und'][0]['value']['#default_value'] == 'graduate') {
        $form['field_asu_ap_addl_req']['#access'] = FALSE;
        $form['field_asu_ap_sl']['#access'] = FALSE;

      $form['field_asu_ap_url_3']['#access'] = FALSE;
      $form['field_asu_ap_url_4']['#access'] = FALSE;
    } else {
      $form['some_text'] = array(
        '#markup' => '<div class="messages error">'
        . '<strong>IMPORTANT</strong>:'
        . ' While there are fields available below to customize these degree pages'
        . ' with custom, additional content for this site, the degrees information imported'
        . ' from the official degrees feed (from webapp4.asu.edu) should'
        . ' not be edited and saved here because those changes will be overwritten'
